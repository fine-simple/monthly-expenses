<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="563.0" maxWidth="700.0" minHeight="427.0" minWidth="530.0" prefHeight="563.0" prefWidth="658.0" spacing="10.0" stylesheets="@../stylesheets/dark-theme.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controller.AddExpense">
   <children>
      <Label alignment="CENTER" minWidth="400.0" text="Add new Expense" VBox.vgrow="ALWAYS">
         <font>
            <Font name="System Bold" size="27.0" />
         </font>
      </Label>
      <TextField fx:id="title" prefHeight="40.0" promptText="Title">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </TextField>
      <TextField fx:id="amount" prefHeight="40.0" promptText="Amount" />
      <DatePicker fx:id="date" prefHeight="40.0" prefWidth="500.0" promptText="Date" VBox.vgrow="ALWAYS" />
      <ComboBox fx:id="categoryCombo" prefHeight="40.0" prefWidth="500.0" promptText="Category" />
      <ComboBox fx:id="walletCombo" prefHeight="40.0" prefWidth="500.0" promptText="Wallet" />
      <Button contentDisplay="RIGHT" mnemonicParsing="false" onAction="#addExpense" prefHeight="40.0" prefWidth="150.0" text="Add" />
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="35.0" left="80.0" right="80.0" top="35.0" />
   </padding>
</VBox>
